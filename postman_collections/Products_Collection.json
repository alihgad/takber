{
	"info": {
		"_postman_id": "products-collection",
		"name": "Products",
		"description": "Products APIs for Takbeer e-commerce platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Products",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/product",
					"host": ["{{base_url}}"],
					"path": ["product"]
				}
			}
		},
		{
			"name": "Get Full Products",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/product/fullProduct",
					"host": ["{{base_url}}"],
					"path": ["product", "fullProduct"]
				}
			}
		},
		{
			"name": "Get New Arrival Products",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/product/newArrival",
					"host": ["{{base_url}}"],
					"path": ["product", "newArrival"]
				}
			}
		},
		{
			"name": "Get Hot Deals",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/product/hotDeals",
					"host": ["{{base_url}}"],
					"path": ["product", "hotDeals"]
				}
			}
		},
		{
			"name": "Get Product by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/product/{{product_id}}",
					"host": ["{{base_url}}"],
					"path": ["product", "{{product_id}}"]
				}
			}
		},
		{
			"name": "Create Product (Admin/Data Entry)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "title",
							"value": "آيفون 15 برو",
							"type": "text"
						},
						{
							"key": "titleEn",
							"value": "iPhone 15 Pro",
							"type": "text"
						},
						{
							"key": "slug",
							"value": "iphone-15-pro",
							"type": "text"
						},
						{
							"key": "slugEn",
							"value": "iphone-15-pro",
							"type": "text"
						},
						{
							"key": "description",
							"value": "أحدث آيفون من أبل مع كاميرا متطورة",
							"type": "text"
						},
						{
							"key": "descriptionEn",
							"value": "Latest iPhone from Apple with advanced camera",
							"type": "text"
						},
						{
							"key": "price",
							"value": "45000",
							"type": "text"
						},
						{
							"key": "category",
							"value": "{{category_id}}",
							"type": "text"
						},
						{
							"key": "brand",
							"value": "Apple",
							"type": "text"
						},
						{
							"key": "discount",
							"value": "10",
							"type": "text"
						},
						{
							"key": "image",
							"type": "file",
							"src": []
						},
						{
							"key": "images",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/product",
					"host": ["{{base_url}}"],
					"path": ["product"]
				}
			}
		},
		{
			"name": "Update Product (Admin/Data Entry)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"آيفون 15 برو ماكس\",\n  \"titleEn\": \"iPhone 15 Pro Max\",\n  \"description\": \"أحدث آيفون برو ماكس من أبل\",\n  \"descriptionEn\": \"Latest iPhone Pro Max from Apple\",\n  \"price\": 50000,\n  \"discount\": 15,\n  \"brand\": \"Apple\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/product/{{product_id}}",
					"host": ["{{base_url}}"],
					"path": ["product", "{{product_id}}"]
				}
			}
		},
		{
			"name": "Change Product Photo (Admin/Data Entry)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "image",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/product/changePhoto/{{product_id}}",
					"host": ["{{base_url}}"],
					"path": ["product", "changePhoto", "{{product_id}}"]
				}
			}
		},
		{
			"name": "Delete Product (Admin Only)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/product/{{product_id}}",
					"host": ["{{base_url}}"],
					"path": ["product", "{{product_id}}"]
				}
			}
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "admin_token",
			"value": "your_admin_jwt_token_here",
			"type": "string"
		},
		{
			"key": "category_id",
			"value": "category_id_from_response",
			"type": "string"
		},
		{
			"key": "product_id",
			"value": "product_id_from_response",
			"type": "string"
		}
	]
} 